{
  "name": "claudeman",
  "displayName": "Claudeman",
  "description": "Manage Claude AI configuration, skills, and MCP servers with built-in file management",
  "version": "0.0.4",
  "publisher": "gobrand",
  "icon": "resources/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/gobrand/claudeman"
  },
  "license": "ISC",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "claudeman.openSettings",
        "title": "Claude: Open Configuration Manager"
      },
      {
        "command": "claudeman.editProjectConfig",
        "title": "Claude: Edit Project Configuration"
      },
      {
        "command": "claudeman.editGlobalConfig",
        "title": "Claude: Edit Global Configuration"
      },
      {
        "command": "claudeman.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "claudeman.copySkillName",
        "title": "Copy Skill Name",
        "icon": "$(copy)"
      },
      {
        "command": "claudeman.newFolder",
        "title": "New Folder",
        "icon": "$(new-folder)"
      },
      {
        "command": "claudeman.newFile",
        "title": "New File",
        "icon": "$(new-file)"
      },
      {
        "command": "claudeman.rename",
        "title": "Rename",
        "icon": "$(edit)"
      },
      {
        "command": "claudeman.delete",
        "title": "Delete",
        "icon": "$(trash)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "claudeman",
          "title": "Claude Config",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "claudeman": [
        {
          "id": "claudeman.configView",
          "name": "Configuration"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "claudeman.refresh",
          "when": "view == claudeman.configView",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "claudeman.copySkillName",
          "when": "view == claudeman.configView && viewItem == skill-folder",
          "group": "inline"
        },
        {
          "command": "claudeman.newFolder",
          "when": "view == claudeman.configView && viewItem =~ /folder/",
          "group": "1_create@1"
        },
        {
          "command": "claudeman.newFile",
          "when": "view == claudeman.configView && viewItem =~ /folder/",
          "group": "1_create@2"
        },
        {
          "command": "claudeman.rename",
          "when": "view == claudeman.configView && viewItem =~ /(folder|file)/ && viewItem != global-claude-folder && viewItem != project-claude-folder && viewItem != skills-folder && viewItem != mcp-folder",
          "group": "2_edit@1"
        },
        {
          "command": "claudeman.delete",
          "when": "view == claudeman.configView && viewItem =~ /(folder|file)/ && viewItem != global-claude-folder && viewItem != project-claude-folder && viewItem != skills-folder && viewItem != mcp-folder",
          "group": "2_edit@2"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run build",
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint src --ext ts",
    "typecheck": "tsc --noEmit",
    "release": "pnpm run build && dotenv -e .env vsce publish"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vscode/vsce": "^3.7.1",
    "dotenv-cli": "^11.0.0",
    "eslint": "^8.56.0",
    "sharp": "^0.34.5",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  },
  "packageManager": "pnpm@10.15.1"
}
